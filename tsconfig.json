    "compilerOptions": {
        "allowJs": true,
        "outDir": "dist",
        "declaration": true,
        "allowUnreachableCode": false,
        "noImplicitAny": true,
        "target": "es2017",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "emitDeclarationOnly": true
    },
    "include": [
        "./src/**/*"
    ]
}